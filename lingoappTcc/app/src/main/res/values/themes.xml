<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lingoapp1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/roxo</item>
        <item name="colorPrimaryVariant">@color/roxo</item>
        <item name="colorOnPrimary">@color/branco_claro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/laranja1</item>
